{
    "name": "vanry/slim",
    "description": "Slim framework skeleton for simple and small application",
    "keywords": ["slim", "slim 4 skeleton", "microframework"],
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Vanry",
            "email": "ivanry@163.com"
        }
    ],
    "require": {
        "php": "^7.3 || ^8.0",
        "hassankhan/config": "^2.2",
        "monolog/monolog": "^2.3",
        "pimple/pimple": "^3.5",
        "slim/php-view": "^3.1",
        "slim/psr7": "^1.5",
        "slim/slim": "^4.9"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "symfony/var-dumper": "^5.4"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app"
        },
        "files": [
            "app/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "scripts": {
        "serve": "php -S localhost:8000 -t public",
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
